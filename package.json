{
  "name": "class-validator-to-open-api",
  "version": "1.0.3",
  "description": "Transform TypeScript classes with class-validator decorators into OpenAPI schema objects",
  "main": "dist/src/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --test dist/src/**/*.test.js",
    "test:watch": "node --test --watch dist/src/**/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage dist/src/**/*.test.js",
    "pretest": "npm run build",
    "build:watch": "tsc -w",
    "build": "tsc",
    "dev": "concurrently \"tsc -w\" \"nodemon\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julioolivares/class-validator-to-open-api.git"
  },
  "keywords": [
    "class-validator",
    "openapi",
    "swagger",
    "typescript",
    "validation",
    "schema",
    "api",
    "dto",
    "nestjs",
    "express",
    "decorators",
    "transform",
    "json-schema",
    "rest-api",
    "documentation"
  ],
  "author": "Julio Olivares",
  "homepage": "https://github.com/julioolivares/class-validator-to-open-api#readme",
  "bugs": {
    "url": "https://github.com/julioolivares/class-validator-to-open-api/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "engineStrict": true,
  "peerDependencies": {
    "class-validator": "^0.14.0"
  },
  "dependencies": {
    "typescript": "5.9.2"
  },
  "devDependencies": {
    "@types/node": "24.2.1",
    "class-validator": "0.14.2",
    "concurrently": "9.2.0",
    "nodemon": "3.1.10",
    "prettier": "3.6.2"
  }
}
